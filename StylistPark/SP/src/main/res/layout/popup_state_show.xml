<?xml version="1.0" encoding="utf-8"?>
<!-- 底部more弹出layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/ui_bg_color_percent_08"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/state_show_rl_finish"
        style="@style/layout_weight_style"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/state_show_ll_show"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/ui_bg_color_white"
        android:orientation="vertical" >

        <ImageView
            style="@style/set_line_horizontal_bg"
            android:contentDescription="@string/desc" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_padding_15"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/state_show_tv_show_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/tv_color_status"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>