<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_order_member_ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_bg_color_nut"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_10"
        android:paddingLeft="@dimen/screen_margin_default"
        android:paddingTop="@dimen/margin_padding_5"
        android:paddingRight="@dimen/screen_margin_default"
        android:paddingBottom="@dimen/margin_padding_5"
        android:background="@color/ui_bg_color_white" >

        <ImageView
            android:id="@+id/item_list_order_member_iv_avatar"
            android:layout_width="@dimen/avatar_size_order"
            android:layout_height="@dimen/avatar_size_order"
            android:contentDescription="@string/desc"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/item_list_order_member_tv_order_no"
            style="@style/setting_lay_text_title"
            android:layout_centerVertical="false"
            android:layout_marginLeft="@dimen/margin_padding_5"
            android:layout_toRightOf="@id/item_list_order_member_iv_avatar"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/item_list_order_member_tv_nick"
            style="@style/setting_lay_text_title"
            android:layout_centerVertical="false"
            android:layout_marginLeft="@dimen/margin_padding_5"
            android:layout_below="@+id/item_list_order_member_tv_order_no"
            android:layout_toRightOf="@id/item_list_order_member_iv_avatar"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/item_list_order_member_tv_order_status"
            style="@style/setting_lay_text_title"
            android:layout_centerVertical="false"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/item_list_order_member_tv_total_user"
            style="@style/setting_lay_text_title"
            android:layout_centerVertical="false"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_list_order_member_tv_order_status"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/tv_color_status" />
    </RelativeLayout>

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:contentDescription="@string/desc" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/member_order_lsit_ll_goods_lists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:contentDescription="@string/desc" />

</LinearLayout>