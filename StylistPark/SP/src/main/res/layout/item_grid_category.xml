<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/grid_item_category_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_bg_color_white" >

    <ImageView
        android:id="@+id/grid_item_category_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/desc"
        android:src="@drawable/icon_goods_default" />

    <TextView
        android:id="@+id/grid_item_category_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grid_item_category_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:lines="2"
        android:text=""
        android:textColor="@color/conte_text_color"
        android:textSize="@dimen/text_size_12" />

</RelativeLayout>