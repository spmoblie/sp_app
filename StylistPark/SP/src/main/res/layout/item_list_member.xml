<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_member_ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_bg_color_nut"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/item_list_member_iv_top_line"
        style="@style/set_line_horizontal_bg"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/desc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ui_bg_color_app"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/item_list_member_iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/desc"
            android:src="@drawable/default_avatar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" >

            <TextView
                android:id="@+id/item_list_member_tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:ellipsize="end"
                android:lines="1"
                android:drawablePadding="5dp"
                android:textColor="@color/conte_text_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/item_list_member_tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/label_text_color"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/item_list_member_tv_order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/label_text_color"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_list_member_tv_order_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/label_text_color"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>