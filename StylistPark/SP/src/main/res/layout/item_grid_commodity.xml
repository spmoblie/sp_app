<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_grid_item_fl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_bg_color_app" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="12dp"
        android:background="@color/ui_bg_color_app"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/product_grid_item_rl_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/product_grid_item_iv_img"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY"
                android:src="@drawable/bg_img_white" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/product_grid_item_ll_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <TextView
                android:id="@+id/product_grid_item_tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/conte_text_color"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/product_grid_item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/conte_text_color"
                android:textSize="@dimen/text_size_11" />

            <LinearLayout
                android:id="@+id/product_grid_item_ll_price_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/product_grid_item_tv_curr"
                    style="@style/common_text_price"
                    android:textSize="@dimen/text_size_09"/>

                <TextView
                    android:id="@+id/product_grid_item_tv_sell_price"
                    style="@style/common_text_price" />

                <TextView
                    android:id="@+id/product_grid_item_tv_full_price"
                    style="@style/common_text_price"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/label_text_color"
                    android:textSize="@dimen/text_size_09" />

                <TextView
                    android:id="@+id/product_grid_item_tv_discount"
                    style="@style/common_text_discount" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>