<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ll_promotion_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_bg_color_app"
    android:orientation="horizontal"
    android:paddingTop="@dimen/margin_padding_5" >

    <TextView
        android:id="@+id/item_tv_promotion_type"
        style="@style/common_text_discount"
        android:layout_marginLeft="0dp"
        android:paddingLeft="@dimen/margin_padding_2"
        android:paddingRight="@dimen/margin_padding_2"
        android:text="@string/product_full_minus"
        android:textSize="@dimen/text_size_09"
        android:visibility="visible" />

    <TextView
        android:id="@+id/item_tv_promotion_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_5"
        android:textColor="@color/conte_text_color"
        android:textSize="@dimen/text_size_11" />

</LinearLayout>