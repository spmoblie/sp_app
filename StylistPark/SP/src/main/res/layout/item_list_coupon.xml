<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_coupon_ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_bg_color_nut"
    android:orientation="vertical"
    android:paddingLeft="@dimen/screen_margin_default"
    android:paddingRight="@dimen/screen_margin_default"
    android:paddingTop="@dimen/screen_margin_default" >

    <LinearLayout
        android:id="@+id/item_list_coupon_ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_coupon_use"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="11"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/item_list_coupon_tv_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/item_list_coupon_tv_money"
                    android:layout_marginLeft="@dimen/screen_margin_default"
                    android:layout_marginBottom="@dimen/margin_padding_5"
                    android:textColor="@color/price_text_color"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/item_list_coupon_tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/item_list_coupon_tv_currency"
                    android:textColor="@color/price_text_color"
                    android:textSize="@dimen/text_size_33"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/margin_padding_10"
                android:paddingRight="@dimen/margin_padding_10"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_list_coupon_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/conte_text_color"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/item_list_coupon_tv_limit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/conte_text_color"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/item_list_coupon_tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/screen_margin_default"
                android:textColor="@color/conte_text_color"
                android:textSize="@dimen/text_size_12" />
            
            <ImageView 
                android:id="@+id/item_list_coupon_iv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/screen_margin_default"
                android:src="@drawable/btn_select_hook_yes"
                android:contentDescription="@string/desc"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_list_coupon_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/screen_margin_default"
                android:textColor="@color/conte_text_color"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>