<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/loading_dialog_height" >

        <ProgressBar
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:indeterminateDrawable="@anim/pull_loading_anim"
            android:layout_marginLeft="@dimen/margin_padding_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_padding_10"
            android:paddingRight="@dimen/margin_padding_10"
            android:text="@string/loading_downloading"
            android:textColor="@color/conte_text_color"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</RelativeLayout>