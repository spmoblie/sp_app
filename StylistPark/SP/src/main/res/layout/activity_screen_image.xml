<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_bg_color_app" >

    <com.spshop.stylistpark.widgets.IViewPager
        android:id="@+id/screen_image_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_padding_100"
        android:padding="@dimen/margin_padding_10"
        android:layout_gravity="bottom" >

        <TextView
            android:id="@+id/screen_image_tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/conte_text_color"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/screen_image_tv_product_price_sell"
            style="@style/common_text_price"
            android:layout_below="@+id/screen_image_tv_product_name"
            android:layout_marginTop="@dimen/margin_padding_10"
            android:textSize="@dimen/text_size_24"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/screen_image_ll_qr_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/screen_margin_default"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/screen_image_qr_buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/common_text_price"
                android:text="@string/setting_qr_buy"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>