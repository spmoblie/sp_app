<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" >

        <FrameLayout
            android:id="@+id/home_fragment_fl_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:contentDescription="@string/desc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/ui_bg_color_app"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <FrameLayout
            android:id="@+id/home_fragment_fl_one"
            style="@style/home_tab_frame" >

            <TextView
                android:id="@+id/home_fragment_tv_one"
                style="@style/home_tab_text"
                android:layout_gravity="center_vertical"
                android:drawableTop="@drawable/selector_img_home_bottom_1"
                android:text="@string/home_tab_text_one" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_fragment_fl_two"
            style="@style/home_tab_frame" >

            <TextView
                android:id="@+id/home_fragment_tv_two"
                style="@style/home_tab_text"
                android:drawableTop="@drawable/selector_img_home_bottom_2"
                android:text="@string/home_tab_text_two" />

            <ImageView
                android:id="@+id/home_fragment_iv_two_warn"
                style="@style/commom_warn_red_img"
                android:contentDescription="@string/desc" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_fragment_fl_three"
            style="@style/home_tab_frame" >

            <TextView
                android:id="@+id/home_fragment_tv_three"
                style="@style/home_tab_text"
                android:drawableTop="@drawable/selector_img_home_bottom_3"
                android:text="@string/home_tab_text_three" />

            <ImageView
                android:id="@+id/home_fragment_iv_three_warn"
                style="@style/commom_warn_red_img"
                android:contentDescription="@string/desc" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_fragment_fl_four"
            style="@style/home_tab_frame" >

            <TextView
                android:id="@+id/home_fragment_tv_four"
                style="@style/home_tab_text"
                android:drawableTop="@drawable/selector_img_home_bottom_4"
                android:text="@string/home_tab_text_four" />

            <TextView
                android:id="@+id/home_fragment_tv_four_warn"
                style="@style/commom_warn_red_number_text" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_fragment_fl_five"
            style="@style/home_tab_frame" >

            <TextView
                android:id="@+id/home_fragment_tv_five"
                style="@style/home_tab_text"
                android:drawableTop="@drawable/selector_img_home_bottom_5"
                android:text="@string/home_tab_text_five" />

            <ImageView
                android:id="@+id/home_fragment_iv_five_warn"
                style="@style/commom_warn_red_img"
                android:contentDescription="@string/desc" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>