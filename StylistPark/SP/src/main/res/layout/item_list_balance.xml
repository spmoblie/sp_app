<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_balance_ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_bg_color_white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/item_list_balance_ll_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_padding_5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            style="@style/set_line_horizontal_bg"
            android:layout_marginRight="@dimen/margin_padding_5"
            android:layout_weight="1"
            android:contentDescription="@string/desc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money_balance_detail"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            style="@style/set_line_horizontal_bg"
            android:layout_marginLeft="@dimen/margin_padding_5"
            android:layout_weight="1"
            android:contentDescription="@string/desc" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_list_balance_tv_title"
            style="@style/setting_lay_text_title"
            android:layout_centerVertical="false"
            android:layout_marginTop="@dimen/margin_padding_10"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginRight="@dimen/margin_padding_100" />

        <TextView
            android:id="@+id/item_list_balance_tv_time"
            style="@style/setting_lay_text_title"
            android:layout_below="@id/item_list_balance_tv_title"
            android:layout_centerVertical="false"
            android:layout_marginTop="@dimen/margin_padding_8"
            android:textColor="@color/label_text_color"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/item_list_balance_tv_money"
            style="@style/setting_lay_text_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/screen_margin_default" />

        <ImageView
            style="@style/set_line_horizontal_bg"
            android:layout_below="@id/item_list_balance_tv_time"
            android:layout_marginLeft="@dimen/screen_margin_default"
            android:layout_marginRight="@dimen/screen_margin_default"
            android:layout_marginTop="@dimen/margin_padding_5"
            android:contentDescription="@string/desc" />
    </RelativeLayout>

</LinearLayout>