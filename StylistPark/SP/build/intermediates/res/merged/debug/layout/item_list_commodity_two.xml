<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_commodity_two_ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_bg_color_nut"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/list_commodity_two_left_ll_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="2dp"
        android:background="@color/ui_bg_color_app"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/list_commodity_two_left_rl_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/list_commodity_two_left_iv_img"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/desc" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/list_commodity_two_left_ll_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/list_commodity_two_left_tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/conte_text_color"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/list_commodity_two_left_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/conte_text_color"
                android:textSize="@dimen/text_size_11" />

            <LinearLayout
                android:id="@+id/list_commodity_two_left_ll_price_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/list_commodity_two_left_tv_curr"
                    style="@style/common_text_price"
                    android:textSize="@dimen/text_size_09"/>

                <TextView
                    android:id="@+id/list_commodity_two_left_tv_sell_price"
                    style="@style/common_text_price" />

                <TextView
                    android:id="@+id/list_commodity_two_left_tv_full_price"
                    style="@style/common_text_price"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/label_text_color"
                    android:textSize="@dimen/text_size_09"/>

                <TextView
                    android:id="@+id/list_commodity_two_left_tv_discount"
                    style="@style/common_text_discount" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/list_commodity_two_left_rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/ui_bg_color_nut"
            android:visibility="gone" >
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        android:background="@color/ui_bg_color_app" >

        <LinearLayout
            android:id="@+id/list_commodity_two_right_ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/list_commodity_two_right_rl_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/list_commodity_two_right_iv_img"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/desc" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/list_commodity_two_right_ll_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/list_commodity_two_right_tv_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/conte_text_color"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:id="@+id/list_commodity_two_right_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/conte_text_color"
                    android:textSize="@dimen/text_size_11" />

                <LinearLayout
                    android:id="@+id/list_commodity_two_right_ll_price_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/list_commodity_two_right_tv_curr"
                        style="@style/common_text_price"
                        android:textSize="@dimen/text_size_09"/>

                    <TextView
                        android:id="@+id/list_commodity_two_right_tv_sell_price"
                        style="@style/common_text_price" />

                    <TextView
                        android:id="@+id/list_commodity_two_right_tv_full_price"
                        style="@style/common_text_price"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/label_text_color"
                        android:textSize="@dimen/text_size_09"/>

                    <TextView
                        android:id="@+id/list_commodity_two_right_tv_discount"
                        style="@style/common_text_discount" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>