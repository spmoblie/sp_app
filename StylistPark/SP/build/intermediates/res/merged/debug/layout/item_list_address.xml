<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_bg_color_nut"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/list_item_address_ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/ui_bg_color_white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/list_item_address_tv_name"
                style="@style/address_text_ellipsize"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/list_item_address_tv_phone"
                style="@style/address_text_ellipsize"
                android:layout_weight="3" />

            <TextView
                android:id="@+id/list_item_address_tv_email"
                style="@style/address_text_ellipsize"
                android:layout_weight="4"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:id="@+id/list_item_address_tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/conte_text_color"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            style="@style/set_line_horizontal_bg"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/desc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ui_bg_color_white" >

            <TextView
                android:id="@+id/list_item_address_tv_default"
                style="@style/Address_Drawable_TextView"
                android:drawableLeft="@drawable/btn_select_hook_no"
                android:text="@string/address_default" />

            <TextView
                android:id="@+id/list_item_address_tv_edit"
                style="@style/Address_Drawable_TextView"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/list_item_address_tv_delete"
                android:drawableLeft="@drawable/icon_edit"
                android:text="@string/edit" />

            <TextView
                android:id="@+id/list_item_address_tv_delete"
                style="@style/Address_Drawable_TextView"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:drawableLeft="@drawable/icon_delete"
                android:text="@string/delete" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>