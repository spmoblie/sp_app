<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topbar_group_ll_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topbar_group_height"
    android:background="@color/ui_bg_color_white"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/topbar_group_rl_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/topbar_group_tv_1"
                style="@style/ViewGroup_TextView" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/topbar_group_rl_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/topbar_group_tv_2"
                style="@style/ViewGroup_TextView"
                android:drawableRight="@drawable/icon_rank_normal"
                android:drawablePadding="5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/topbar_group_rl_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="15dp"
            android:gravity="center" >

            <TextView
                android:id="@+id/topbar_group_tv_3"
                style="@style/ViewGroup_TextView"
                android:drawableRight="@drawable/selector_btn_screen"
                android:drawablePadding="5dp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:contentDescription="@string/desc" />

</LinearLayout>