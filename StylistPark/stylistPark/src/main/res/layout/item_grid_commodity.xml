<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_grid_item_fl_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_bg_color_app" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="12dp"
        android:background="@color/ui_bg_color_app"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/product_grid_item_rl_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/product_grid_item_iv_img"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY"
                android:src="@drawable/bg_img_white" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/product_grid_item_ll_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/product_grid_item_tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_color_title"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/product_grid_item_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/text_color_title"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/product_grid_item_ll_price_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/product_grid_item_tv_sell_price"
                    style="@style/common_text_price" />

                <TextView
                    android:id="@+id/product_grid_item_tv_full_price"
                    style="@style/common_text_price"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/text_color_content" />

                <TextView
                    android:id="@+id/product_grid_item_tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/shape_frame_bg_app_buttom_0"
                    android:gravity="center"
                    android:padding="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_08"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>