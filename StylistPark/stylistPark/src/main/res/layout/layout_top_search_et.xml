<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_search_ll_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49.5dp"
        android:baselineAligned="false"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/search_iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:contentDescription="@string/desc"
                android:paddingLeft="15dp"
                android:src="@drawable/btn_pressed_back" />

            <TextView
                android:id="@+id/search_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_20"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search_rl_search_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7" >

            <EditText
                android:id="@+id/search_et_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape_frame_bg_app_hollow_4"
                android:hint="@string/product_search_et_hint"
                android:imeOptions="actionSearch"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:singleLine="true"
                android:textColor="@color/text_color_content"
                android:textColorHint="@color/text_color_assist"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/generator_search_icon" />

            <ImageView
                android:id="@+id/search_iv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/topbar_icon_clear"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search_rl_search_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingRight="15dp" >

            <TextView
                android:id="@+id/search_tv_search_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/product_search"
                android:textColor="@color/ui_bg_color_bar"
                android:textSize="@dimen/text_size_18" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:contentDescription="@string/desc" />

</LinearLayout>