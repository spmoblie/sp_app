<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_bg_color_app" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/show_list_listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null" />

        <include layout="@layout/layout_loading_anim_samll" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_list_ll_stikky_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ui_bg_color_white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/show_list_iv_brand_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY"
                android:src="@drawable/bg_profile_top_login_no" />

            <TextView
                android:id="@+id/show_list_tv_brand_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/show_list_tv_unfold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingBottom="10dp"
                android:text="@string/unfold"
                android:textColor="@color/text_color_assist"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            style="@style/set_line_horizontal_bg"
            android:contentDescription="@string/desc" />

        <include layout="@layout/layout_topbar_radio_group" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_list_tv_page_num"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_toast"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_12"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/show_list_iv_to_top"
        style="@style/common_to_top"
        android:contentDescription="@string/desc" />

</FrameLayout>