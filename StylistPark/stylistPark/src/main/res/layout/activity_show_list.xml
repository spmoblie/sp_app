<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_bg_color_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/show_list_listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null" />

        <include layout="@layout/layout_loading_anim_samll" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/show_list_ll_stikky_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ui_bg_color_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/show_list_iv_brand_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc"
                    android:scaleType="fitStart"
                    android:src="@drawable/bg_profile_top_login_no" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:background="@color/ui_bg_color_percent_80">

                    <ImageView
                        android:id="@+id/show_list_iv_brand_img_logo"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp" />

                    <TextView
                        android:id="@+id/show_list_tv_brand_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/show_list_iv_brand_img_logo"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_16" />


                    <TextView
                        android:id="@+id/show_list_tv_unfold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:text="@string/unfold"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_12"
                        android:visibility="gone" />
                </RelativeLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/show_list_tv_brand_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/text_color_title"
                android:textSize="@dimen/text_size_12" />

            <LinearLayout
                android:id="@+id/show_list_ll_favourable_time"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/set_line_horizontal_bg"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/show_list_tv_favourable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_16" />

                    <ImageView
                        style="@style/set_line_horizontal_bg"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/show_list_tv_time_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_color_red_1"
                        android:textSize="@dimen/text_size_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/day"
                        android:textColor="@color/text_color_assist"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/show_list_tv_time_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/text_color_red_1"
                        android:textSize="@dimen/text_size_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/hour"
                        android:textColor="@color/text_color_assist"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/show_list_tv_time_minute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/text_color_red_1"
                        android:textSize="@dimen/text_size_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/minute"
                        android:textColor="@color/text_color_assist"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/show_list_tv_time_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/text_color_red_1"
                        android:textSize="@dimen/text_size_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/second"
                        android:textColor="@color/text_color_assist"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            style="@style/set_line_horizontal_bg"
            android:contentDescription="@string/desc" />

        <include layout="@layout/layout_topbar_radio_group" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_list_tv_page_num"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="15dp"
        android:background="@drawable/bg_toast"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_12"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/show_list_iv_to_top"
        style="@style/common_to_top"
        android:contentDescription="@string/desc" />

</FrameLayout>