        </RelativeLayout>

        <ImageView
            android:id="@+id/cellClothesRightLine2_ImageView"
            style="@style/set_line_vertical_bg"
            android:contentDescription="@string/desc" />

        <RelativeLayout
            android:id="@+id/cellClothesIcon3_Layout"
