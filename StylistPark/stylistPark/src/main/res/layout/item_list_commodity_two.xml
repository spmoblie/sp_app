<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_commodity_two_ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_bg_color_gray"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/list_commodity_two_left_ll_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/ui_bg_color_app"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/list_commodity_two_left_rl_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <ImageView
                android:id="@+id/list_commodity_two_left_iv_img"
                android:layout_width="150dp"
                android:layout_height="190dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/list_commodity_two_left_ll_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/list_commodity_two_left_tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text=""
                android:textColor="@color/text_color_title"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/list_commodity_two_left_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:ellipsize="end"
                android:lines="2"
                android:text=""
                android:textColor="@color/text_color_title"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/list_commodity_two_left_ll_price_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/list_commodity_two_left_tv_sell_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_color_red_1"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/list_commodity_two_left_tv_full_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text=""
                    android:textColor="@color/text_color_content"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/list_commodity_two_left_tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@color/text_color_red_1"
                    android:gravity="center"
                    android:padding="2dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_08"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_weight="1"
        android:background="@color/ui_bg_color_gray"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/list_commodity_two_right_ll_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ui_bg_color_app"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/list_commodity_two_right_rl_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/list_commodity_two_right_iv_img"
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/desc"
                    android:scaleType="fitXY" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/list_commodity_two_right_ll_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/list_commodity_two_right_tv_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/text_color_title"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/list_commodity_two_right_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text=""
                    android:textColor="@color/text_color_title"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/list_commodity_two_right_ll_price_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/list_commodity_two_right_tv_sell_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text_color_red_1"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/list_commodity_two_right_tv_full_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text=""
                        android:textColor="@color/text_color_content"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/list_commodity_two_right_tv_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@color/text_color_red_1"
                        android:gravity="center"
                        android:padding="2dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_08"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>