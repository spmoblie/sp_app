<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_list_cart_product_ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ui_bg_color_gray"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/ui_bg_color_white"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/item_list_cart_product_rl_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/item_list_cart_product_iv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc"
                android:src="@drawable/btn_select_hook_no" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_list_cart_product_rl_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/item_list_cart_product_iv_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:contentDescription="@string/desc"
                android:scaleType="fitXY"
                android:src="@drawable/bg_img_white" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/item_list_cart_product_tv_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:ellipsize="end"
                    android:lines="2"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/text_color_content"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/item_list_cart_product_tv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/text_color_red_1"
                    android:textSize="@dimen/text_size_14"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_list_cart_product_tv_attr"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/text_color_assist"
                android:textSize="@dimen/text_size_12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_frame_tv_white_gray_4"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/item_list_cart_product_rl_num_minus"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/item_list_cart_product_iv_num_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_btn_num_minus"
                            android:contentDescription="@string/desc" />
                    </RelativeLayout>

                    <ImageView
                        style="@style/set_line_vertical_bg"
                        android:contentDescription="@string/desc" />

                    <TextView
                        android:id="@+id/item_list_cart_product_tv_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/number_0"
                        android:textColor="@color/text_color_title"
                        android:textSize="@dimen/text_size_12" />

                    <ImageView
                        style="@style/set_line_vertical_bg"
                        android:contentDescription="@string/desc" />

                    <RelativeLayout
                        android:id="@+id/item_list_cart_product_rl_num_add"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/item_list_cart_product_iv_num_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_btn_num_add"
                            android:contentDescription="@string/desc" />
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/item_list_cart_product_rl_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/item_list_cart_product_iv_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/icon_delete"
                        android:contentDescription="@string/desc" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>