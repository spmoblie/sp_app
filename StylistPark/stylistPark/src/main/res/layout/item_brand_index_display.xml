<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brand_indexRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/brand_indexLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/brand_cell_header_height"
        android:background="@color/text_color_white"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/brand_indexNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/text_color_app_bar"
            android:textSize="@dimen/brand_cell_header_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/brand_itemLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/brand_cell_item_height"
        android:background="@color/text_color_white" >


        <ImageView
            android:id="@+id/brand_iv_logo"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/desc" />

        <TextView
            android:id="@+id/brand_nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/brand_iv_logo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/brand_cell_item_text_size" />

        <ImageView
            android:id="@+id/brand_dividerImageView"
            style="@style/set_line_horizontal_bg"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:contentDescription="@string/desc" />
    </RelativeLayout>

</LinearLayout>