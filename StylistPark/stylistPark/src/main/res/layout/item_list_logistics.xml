<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logistics_ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7" >

        <ImageView
            android:id="@+id/logistics_iv_node"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/desc"
            android:src="@drawable/logistics_line_last" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_weight="43" >

        <TextView
            android:id="@+id/logistics_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="15dp"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/text_color_assist"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/logistics_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:textColor="@color/text_color_assist"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            style="@style/set_line_horizontal_bg"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/desc" />
    </RelativeLayout>

</LinearLayout>