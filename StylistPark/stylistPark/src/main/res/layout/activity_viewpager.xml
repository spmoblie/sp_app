<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_bg_color_app" >

    <com.spshop.stylistpark.widgets.IViewPager
        android:id="@+id/my_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <TextView 
        android:id="@+id/my_image_save"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/ui_bg_color_bar"
        android:text="@string/photo_show_save_image"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone" />
    
    <TextView 
        android:id="@+id/my_viewpager_tv_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_toast"
        android:gravity="center"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_12" />

</FrameLayout>