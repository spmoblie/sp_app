<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:background="@color/ui_bg_color_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/ui_bg_color_black"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_18" />

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:contentDescription="@string/desc" />

    <TextView
        android:id="@+id/dialog_list_item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_18" />

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:contentDescription="@string/desc" />

    <TextView
        android:id="@+id/dialog_list_item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>