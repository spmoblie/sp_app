<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/collage_transparent" >

    <LinearLayout
        android:id="@+id/productCollectionMenu_Layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_menu_height"
        android:layout_alignParentBottom="true"
        android:background="@color/ui_bg_color_white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/productCollectionMenu_backImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/generator_items_back_dim"
            android:contentDescription="@string/desc" />

        <com.spshop.stylistpark.widgets.HorizontalListView
            android:id="@+id/productCollectionMenu_ListView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/productCollectionMenu_View"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/productCollectionMenu_nextImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/generator_items_next"
            android:contentDescription="@string/desc" />
    </LinearLayout>

    <ImageView
        android:id="@+id/productCollectionMenu_interceptImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_menu_height"
        android:layout_alignParentBottom="true"
        android:background="@color/collage_light_grey_241_241_241_trans"
        android:contentDescription="@string/desc"
        android:visibility="gone" />

</RelativeLayout>