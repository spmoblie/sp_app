<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_two_title_rl_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height" >

    <ImageView
        android:id="@+id/top_two_title_iv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:contentDescription="@string/desc"
        android:paddingLeft="15dp"
        android:src="@drawable/btn_pressed_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/top_two_title_iv_left"
        android:layout_toLeftOf="@+id/top_two_title_btn_right"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/top_two_title_tv_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_frame_bg_app_buttom_4"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/top_two_title_tv_title_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/shape_frame_bg_app_hollow_4"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:textColor="@color/ui_bg_color_bar"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <Button
        android:id="@+id/top_two_title_btn_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@color/ui_bg_color_percent_100"
        android:textColor="@color/text_color_content"
        android:textSize="@dimen/text_size_18"
        android:visibility="gone" />

    <ImageView
        style="@style/set_line_horizontal_bg"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/desc" />

</RelativeLayout>