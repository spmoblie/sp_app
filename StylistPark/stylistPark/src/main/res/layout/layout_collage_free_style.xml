<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
     >
    
    <com.spshop.stylistpark.collageviews.CollageView
        android:id="@+id/collageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/generator_collage_image_margin"
        />
    
    <View 
        android:id="@+id/viewScaleLT"
        android:layout_width="@dimen/generator_collage_image_corner_side"
        android:layout_height="@dimen/generator_collage_image_corner_side"
        android:background="@drawable/generator_image_scale"
         />
    
    <View 
        android:id="@+id/viewScaleLB"
        android:layout_width="@dimen/generator_collage_image_corner_side"
        android:layout_height="@dimen/generator_collage_image_corner_side"
        android:background="@drawable/generator_image_scale_mirror"
        android:layout_alignParentBottom="true"
         />
    
    <View 
        android:id="@+id/viewScaleRB"
        android:layout_width="@dimen/generator_collage_image_corner_side"
        android:layout_height="@dimen/generator_collage_image_corner_side"
        android:background="@drawable/generator_image_scale"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
         />
    
    <View 
        android:id="@+id/viewRotate"
        android:layout_width="@dimen/generator_collage_image_corner_side"
        android:layout_height="@dimen/generator_collage_image_corner_side"
        android:background="@drawable/generator_image_rotate"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
         />

</RelativeLayout>
